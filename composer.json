{
    "name": "niels-nijens/symfony-console-logging",
    "description": "Components to enhance Symfony console & stdout logging.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Niels Nijens",
            "email": "nijens.niels@gmail.com"
        }
    ],
    "require": {
        "php": "^7.3"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16"
    },
    "autoload": {
        "psr-4": {
            "Nijens\\SymfonyConsoleLogging\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nijens\\SymfonyConsoleLogging\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "cs-fixer": [
            "./vendor/bin/php-cs-fixer fix"
        ]
    },
    "scripts-descriptions": {
        "cs-fixer": "Run the code style fixer for this project."
    },
    "config": {
        "sort-packages": true
    }
}
